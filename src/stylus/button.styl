button,
input[type="button"],
input[type="submit"]
  border $button-border
  border-radius $button-border-radius
  padding $button-padding
  margin $button-margin
  color $button-color
  background-color $button-background-color

button:hover,
input[type="button"]:hover,
input[type="submit"]:hover
  border $button-hover-border
  border-radius $button-hover-border-radius
  padding $button-hover-padding
  margin $button-hover-margin
  color $button-hover-color
  background-color $button-hover-background-color

button:active,
input[type="button"]:active,
input[type="submit"]:active
  border $button-active-border
  border-radius $button-active-border-radius
  padding $button-active-padding
  margin $button-active-margin
  color $button-active-color
  background-color $button-active-background-color

button[disabled],
button[disabled]:hover,
button[disabled]:active,
input[disabled][type='button'],
input[disabled][type='button']:hover,
input[disabled][type='button']:active,
input[disabled][type='submit'],
input[disabled][type='submit']:hover,
input[disabled][type='submit']:active
  border $button-disabled-border
  border-radius $button-disabled-border-radius
  padding $button-disabled-padding
  margin $button-disabled-margin
  color $button-disabled-color
  background-color $button-disabled-background-color

button.small,
input[type='button'].small,
input[type='submit'].small
  border $button-small-border
  border-radius $button-small-border-radius
  padding $button-small-padding
  margin $button-small-margin

button.large,
input[type='button'].large,
input[type='submit'].large
  border $button-large-border
  border-radius $button-large-border-radius
  padding $button-large-padding
  margin $button-large-margin