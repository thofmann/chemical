button,
input[type='button'],
input[type='submit']
  font-size $button-font-size
  border $button-border
  border-radius $button-border-radius
  padding $button-padding
  margin $button-margin
  color $button-color
  background-color $button-background-color

button:hover,
input[type='button']:hover,
input[type='submit']:hover
  border-color $button-hover-border-color
  color $button-hover-color
  background-color $button-hover-background-color

button:active,
input[type='button']:active,
input[type='submit']:active
  border-color $button-active-border-color
  color $button-active-color
  background-color $button-active-background-color

button[disabled],
button[disabled]:hover,
button[disabled]:active,
input[type='button'][disabled],
input[type='button'][disabled]:hover,
input[type='button'][disabled]:active,
input[type='submit'][disabled],
input[type='submit'][disabled]:hover,
input[type='submit'][disabled]:active
  border-color $button-disabled-border-color
  color $button-disabled-color
  background-color $button-disabled-background-color

for $brand, $brand-color in $brands

  button.{$brand},
  input[type='button'].{$brand},
  input[type='submit'].{$brand}
    color dark(darken($brand-color, 35%)) ? #fff : #000
    background-color $brand-color

  button.{$brand}:hover,
  input[type='button'].{$brand}:hover,
  input[type='submit'].{$brand}:hover
    color dark(darken($brand-color, 35%)) ? #fff : #000
    background-color darken($brand-color, 20%)

  button.{$brand}:active,
  input[type='button'].{$brand}:active,
  input[type='submit'].{$brand}:active
    color dark(darken($brand-color, 35%)) ? #fff : #000
    background-color darken($brand-color, 35%)

  button.{$brand}[disabled],
  button.{$brand}[disabled]:hover,
  button.{$brand}[disabled]:active,
  input[type='button'][disabled].{$brand},
  input[type='button'][disabled].{$brand}:hover,
  input[type='button'][disabled].{$brand}:active,
  input[type='submit'][disabled].{$brand},
  input[type='submit'][disabled].{$brand}:hover,
  input[type='submit'][disabled].{$brand}:active
    color dark(darken($brand-color, 35%)) ? #fff : #000
    background-color lighten($brand-color, 35%)

button.small
  font-size $button-small-font-size
  border-radius $button-small-border-radius
  padding $button-small-padding
  margin $button-small-margin

button.large
  font-size $button-large-font-size
  border-radius $button-large-border-radius
  padding $button-large-padding
  margin $button-large-margin