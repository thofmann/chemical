button,
input[type='button'],
input[type='submit']
  border 0
  padding 8px 16px
  background-color darken(#fff, 10%)

  &:focus
    outline 0
    background-color darken(#fff, 10%)

  &:hover
    background-color darken(#fff, 20%)

  &:active
    background-color darken(#fff, 35%)

  &[disabled],
  &[disabled]:hover,
  &[disabled]:active
    color lighten(#000, 75%)
    background-color darken(#fff, 5%)

  &.block
    width 100%
