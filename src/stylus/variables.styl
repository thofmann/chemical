/*
 * Base variables
 */

// colors
$color = #000
$background-color = #fff
$border-color = #aaa

// fonts
$font-size = 14px

// borders
$border-width = 1px
$border-style = solid
$border-radius = 5px


/*
 * Headers
 */

// header base
$header-border = 0
$header-border-radius = 0
$header-padding = 2px 0
$header-margin = 0
$header-color = #000
$header-background-color = $background-color

// header font sizes
$h1-font-size = round($font-size * 3)
$h2-font-size = round($h1-font-size * 0.8)
$h3-font-size = round($h2-font-size * 0.8)
$h4-font-size = round($h3-font-size * 0.8)
$h5-font-size = round($h4-font-size * 0.8)
$h6-font-size = round($h5-font-size * 0.8)

// header borders
$h1-border = $header-border
$h2-border = $header-border
$h3-border = $header-border
$h4-border = $header-border
$h5-border = $header-border
$h6-border = $header-border
$h1-border-radius = $header-border-radius
$h2-border-radius = $header-border-radius
$h3-border-radius = $header-border-radius
$h4-border-radius = $header-border-radius
$h5-border-radius = $header-border-radius
$h6-border-radius = $header-border-radius

// header padding
$h1-padding = $header-padding
$h2-padding = $header-padding
$h3-padding = $header-padding
$h4-padding = $header-padding
$h5-padding = $header-padding
$h6-padding = $header-padding

// header margin
$h1-margin = $header-margin
$h2-margin = $header-margin
$h3-margin = $header-margin
$h4-margin = $header-margin
$h5-margin = $header-margin
$h6-margin = $header-margin

// header color
$h1-color = $header-color
$h2-color = $header-color
$h3-color = $header-color
$h4-color = $header-color
$h5-color = $header-color
$h6-color = $header-color

// header background color
$h1-background-color = $header-background-color
$h2-background-color = $header-background-color
$h3-background-color = $header-background-color
$h4-background-color = $header-background-color
$h5-background-color = $header-background-color
$h6-background-color = $header-background-color


/*
 * Paragraphs
 */
$paragraph-border = 0
$paragraph-border-radius = 0
$paragraph-padding = 0
$paragraph-margin = 4px 0 4px 0
$paragraph-color = $color
$paragraph-background-color = $background-color


/*
 * Buttons
 */

// button base
$button-font-size = $font-size
$button-border = $border-width $border-style $border-color
$button-border-radius = $border-radius
$button-padding = 5px
$button-margin = 0
$button-color = $color
$button-background-color = $background-color

// hovered button
$button-hover-border = $border-width $border-style $border-color
$button-hover-border-radius = $border-radius
$button-hover-padding = $button-padding
$button-hover-margin = $button-margin
$button-hover-color = $color
$button-hover-background-color = mix($background-color, invert($background-color), 85%)

// active button
$button-active-border = $border-width $border-style $border-color
$button-active-border-radius = $border-radius
$button-active-padding = $button-padding
$button-active-margin = $button-margin
$button-active-color = $color
$button-active-background-color = mix($background-color, invert($background-color), 75%)

// disabled button
$button-disabled-border = $border-width $border-style $border-color
$button-disabled-border-radius = $border-radius
$button-disabled-padding = $button-padding
$button-disabled-margin = $button-margin
$button-disabled-color = mix($color, invert($color), 65%)
$button-disabled-background-color = mix($background-color, invert($background-color), 65%)

// small button
$button-small-font-size = round($button-font-size * 0.6)
$button-small-border = $border-width $border-style $border-color
$button-small-border-radius = round($button-border-radius * 0.6)
$button-small-padding = round($button-padding * 0.6)
$button-small-margin = round($button-margin * 0.6)

// large button
$button-large-font-size = round($button-font-size * 1.8)
$button-large-border = $border-width $border-style $border-color
$button-large-border-radius = round($button-border-radius * 1.8)
$button-large-padding = round($button-padding * 1.8)
$button-large-margin = round($button-margin * 1.8)

// primary button
$button-primary-border = $button-border
$button-primary-color = #fff
$button-primary-background-color = #00b
$button-primary-disabled-border = $button-primary-border
$button-primary-disabled-color = mix($button-disabled-color, $button-primary-color)
$button-primary-disabled-background-color = mix($button-disabled-background-color, $button-primary-background-color)

// secondary button
$button-secondary-border = $button-border
$button-secondary-color = #fff
$button-secondary-background-color = #00e
$button-secondary-disabled-border = $button-secondary-border
$button-secondary-disabled-color = mix($button-disabled-color, $button-secondary-color)
$button-secondary-disabled-background-color = mix($button-disabled-background-color, $button-secondary-background-color)

// success button
$button-success-border = $button-border
$button-success-color = #fff
$button-success-background-color = #0a0
$button-success-disabled-border = $button-success-border
$button-success-disabled-color = mix($button-disabled-color, $button-success-color)
$button-success-disabled-background-color = mix($button-disabled-background-color, $button-success-background-color)

// warning button
$button-warning-border = $button-border
$button-warning-color = #fff
$button-warning-background-color = #b60
$button-warning-disabled-border = $button-warning-border
$button-warning-disabled-color = mix($button-disabled-color, $button-warning-color)
$button-warning-disabled-background-color = mix($button-disabled-background-color, $button-warning-background-color)

// danger button
$button-danger-border = $button-border
$button-danger-color = #fff
$button-danger-background-color = #a00
$button-danger-disabled-border = $button-danger-border
$button-danger-disabled-color = mix($button-disabled-color, $button-danger-color)
$button-danger-disabled-background-color = mix($button-disabled-background-color, $button-danger-background-color)


/*
 * Containers
 */
$container-border = 0
$container-padding = 20px 30px
$container-margin = 0
$container-color = $color
$container-background-color = $background-color
$container-narrow-width = 60%


/*
 * Panels
 */
$panel-border = $border-width $border-style $border-color
$panel-border-radius = $border-radius
$panel-padding = 10px
$panel-margin = 0
$panel-color = $color
$panel-background-color = $background-color


/*
 * Code
 */
$code-font = "Courier New", Courier, monospace
$code-border = 0
$code-border-radius = 0
$code-padding = 2px
$code-margin = 0