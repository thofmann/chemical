// base colors
$color = #000
$background-color = #fff
$border-color = #aaa

// fonts
$font-size-base = 14px

$font-size-h1 = $font-size-base * 3
$font-size-h2 = $font-size-base * 2.5
$font-size-h3 = $font-size-base * 2
$font-size-h4 = $font-size-base * 1.5
$font-size-h5 = $font-size-base * 1
$font-size-h6 = $font-size-base * 0.5

// base borders
$border-width = 1px
$border-style = solid
$border-radius = 5px


// containers
$container-border = 0px
$container-padding = 20px 30px
$container-margin = 0px
$container-color = $color
$container-background-color = $background-color
$container-narrow-width = 60%

// panels
$panel-border = $border-width $border-style $border-color
$panel-border-radius = $border-radius
$panel-padding = 10px
$panel-margin = 0px
$panel-color = $color
$panel-background-color = $background-color