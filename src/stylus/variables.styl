// base
$color = #000
$background-color = #fff
$border-color = #aaa
$font-size = 14px

// headers
$header-border = 0
$header-border-radius = 0
$header-padding = 2px 0
$header-margin = 0
$header-background-color = $background-color
$h1-font-size = round($font-size * 3)
$h2-font-size = round($h1-font-size * 0.8)
$h3-font-size = round($h2-font-size * 0.8)
$h4-font-size = round($h3-font-size * 0.8)
$h5-font-size = round($h4-font-size * 0.8)
$h6-font-size = round($h5-font-size * 0.8)
$h1-border = $header-border
$h2-border = $header-border
$h3-border = $header-border
$h4-border = $header-border
$h5-border = $header-border
$h6-border = $header-border
$h1-border-radius = $header-border-radius
$h2-border-radius = $header-border-radius
$h3-border-radius = $header-border-radius
$h4-border-radius = $header-border-radius
$h5-border-radius = $header-border-radius
$h6-border-radius = $header-border-radius
$h1-padding = $header-padding
$h2-padding = $header-padding
$h3-padding = $header-padding
$h4-padding = $header-padding
$h5-padding = $header-padding
$h6-padding = $header-padding
$h1-margin = $header-margin
$h2-margin = $header-margin
$h3-margin = $header-margin
$h4-margin = $header-margin
$h5-margin = $header-margin
$h6-margin = $header-margin
$h1-background-color = $header-background-color
$h2-background-color = $header-background-color
$h3-background-color = $header-background-color
$h4-background-color = $header-background-color
$h5-background-color = $header-background-color
$h6-background-color = $header-background-color

// base borders
$border-width = 1px
$border-style = solid
$border-radius = 5px

// paragraphs
$paragraph-border = 0
$paragraph-border-radius = 0
$paragraph-padding = 0
$paragraph-margin = 4px 0 4px 0
$paragraph-color = $color
$paragraph-background-color = $background-color

// buttons
$button-border = $border-width $border-style $border-color
$button-border-radius = $border-radius
$button-padding = 5px
$button-margin = 0
$button-color = $color
$button-background-color = $background-color
$button-active-border = $border-width $border-style $border-color
$button-active-border-radius = $border-radius
$button-active-padding = 5px
$button-active-margin = 0
$button-active-color = $color
$button-active-background-color = blend($background-color, invert($background-color), 75%)

// containers
$container-border = 0
$container-padding = 20px 30px
$container-margin = 0
$container-color = $color
$container-background-color = $background-color
$container-narrow-width = 60%

// panels
$panel-border = $border-width $border-style $border-color
$panel-border-radius = $border-radius
$panel-padding = 10px
$panel-margin = 0
$panel-color = $color
$panel-background-color = $background-color

// code
$code-font = "Courier New", Courier, monospace