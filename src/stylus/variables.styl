/*
 * Base variables
 */

// colors
$color = #000
$background-color = #fff
$border-color = #c1c1c1

// fonts
$font-size = 14px

// borders
$border-width = 1px
$border-style = solid
$border-radius = 4px


/*
 * Headings
 */

// heading base
$heading-border = 0
$heading-border-radius = 0
$heading-padding = 2px 0
$heading-margin = 0
$heading-color = $color
$heading-background-color = $background-color

// page heading
$page-heading-border-color = #b5b5b5
$page-heading-padding = 10px 0
$page-heading-margin = 30px 0 20px 0

// heading font sizes
$h1-font-size = round($font-size * 3)
$h2-font-size = round($h1-font-size * 0.8)
$h3-font-size = round($h2-font-size * 0.8)
$h4-font-size = round($h3-font-size * 0.8)
$h5-font-size = round($h4-font-size * 0.8)
$h6-font-size = round($h5-font-size * 0.8)

// heading borders
$h1-border = $heading-border
$h2-border = $heading-border
$h3-border = $heading-border
$h4-border = $heading-border
$h5-border = $heading-border
$h6-border = $heading-border
$h1-border-radius = $heading-border-radius
$h2-border-radius = $heading-border-radius
$h3-border-radius = $heading-border-radius
$h4-border-radius = $heading-border-radius
$h5-border-radius = $heading-border-radius
$h6-border-radius = $heading-border-radius

// heading padding
$h1-padding = $heading-padding
$h2-padding = $heading-padding
$h3-padding = $heading-padding
$h4-padding = $heading-padding
$h5-padding = $heading-padding
$h6-padding = $heading-padding

// heading margin
$h1-margin = $heading-margin
$h2-margin = $heading-margin
$h3-margin = $heading-margin
$h4-margin = $heading-margin
$h5-margin = $heading-margin
$h6-margin = $heading-margin

// heading color
$h1-color = $heading-color
$h2-color = $heading-color
$h3-color = $heading-color
$h4-color = $heading-color
$h5-color = $heading-color
$h6-color = $heading-color

// heading background color
$h1-background-color = $heading-background-color
$h2-background-color = $heading-background-color
$h3-background-color = $heading-background-color
$h4-background-color = $heading-background-color
$h5-background-color = $heading-background-color
$h6-background-color = $heading-background-color

/*
 * Anchors
 */

// base anchor
$anchor-color = #3261ab
$anchor-text-decoration = none

// visited anchor
$anchor-visited-color = $anchor-color
$anchor-visited-text-decoration = $anchor-text-decoration

// hovered anchor
$anchor-hover-color = $anchor-color
$anchor-hover-text-decoration = underline

/*
 * Paragraphs
 */

// base paragraph
$paragraph-border = 0
$paragraph-border-radius = 0
$paragraph-padding = 4px 0
$paragraph-margin = 3px 0
$paragraph-color = $color
$paragraph-background-color = $background-color
$paragraph-text-indent = 30px

// paragraph line spacing
$paragraph-line-height = 150%
$paragraph-single-spaced-line-height = 100%
$paragraph-double-spaced-line-height = 200%


/*
 * Buttons
 */

// button base
$button-font-size = $font-size
$button-border-color = $border-color
$button-border = $border-width $border-style $button-border-color
$button-border-radius = $border-radius
$button-padding = 8px
$button-margin = 0
$button-color = $color
$button-background-color = $background-color
$button-size-scale = 1.5
$button-hover-border-color = $button-border-color
$button-hover-color = $color
$button-hover-background-color = darken($button-background-color, 20%)
$button-active-border-color = $button-border-color
$button-active-color = $color
$button-active-background-color = darken($button-background-color, 35%)
$button-disabled-border-color = lighten($button-border-color, 35%)
$button-disabled-color = lighten($button-color, 35%)
$button-disabled-background-color = $button-background-color

// small button
$button-small-font-size = round($button-font-size / $button-size-scale)
$button-small-border-radius = round($button-border-radius / $button-size-scale)
$button-small-padding = round($button-padding / $button-size-scale)
$button-small-margin = round($button-margin  / $button-size-scale)

// large button
$button-large-font-size = round($button-font-size * $button-size-scale)
$button-large-border-radius = round($button-border-radius * $button-size-scale)
$button-large-padding = round($button-padding * $button-size-scale)
$button-large-margin = round($button-margin * $button-size-scale)

// primary button
$button-primary-border-color = $button-border-color
$button-primary-color = #fff
$button-primary-background-color = #0066ff
$button-primary-hover-border-color = $button-primary-border-color
$button-primary-hover-color = $button-primary-color
$button-primary-hover-background-color = darken($button-primary-background-color, 20%)
$button-primary-active-border-color = $button-primary-border-color
$button-primary-active-color = $button-primary-color
$button-primary-active-background-color = darken($button-primary-background-color, 35%)
$button-primary-disabled-border-color = lighten($button-primary-border-color, 25%)
$button-primary-disabled-color = darken($button-primary-color, 5%)
$button-primary-disabled-background-color = lighten($button-primary-background-color, 35%)

// secondary button
$button-secondary-border-color = $button-border-color
$button-secondary-color = #fff
$button-secondary-background-color = #5cadff
$button-secondary-hover-border-color = $button-secondary-border-color
$button-secondary-hover-color = $button-secondary-color
$button-secondary-hover-background-color = darken($button-secondary-background-color, 20%)
$button-secondary-active-border-color = $button-secondary-border-color
$button-secondary-active-color = $button-secondary-color
$button-secondary-active-background-color = darken($button-secondary-background-color, 35%)
$button-secondary-disabled-border-color = lighten($button-secondary-border-color, 35%)
$button-secondary-disabled-color = darken($button-secondary-color, 5%)
$button-secondary-disabled-background-color = lighten($button-secondary-background-color, 35%)

// success button
$button-success-border-color = $button-border-color
$button-success-color = #fff
$button-success-background-color = #61b827
$button-success-hover-border-color = $button-success-border-color
$button-success-hover-color = $button-success-color
$button-success-hover-background-color = darken($button-success-background-color, 20%)
$button-success-active-border-color = $button-success-border-color
$button-success-active-color = $button-success-color
$button-success-active-background-color = darken($button-success-background-color, 35%)
$button-success-disabled-border-color = lighten($button-success-border-color, 35%)
$button-success-disabled-color = darken($button-success-color, 5%)
$button-success-disabled-background-color = lighten($button-success-background-color, 35%)

// warning button
$button-warning-border-color = $button-border-color
$button-warning-color = #fff
$button-warning-background-color = #f58a20
$button-warning-hover-border-color = $button-warning-border-color
$button-warning-hover-color = $button-warning-color
$button-warning-hover-background-color = darken($button-warning-background-color, 20%)
$button-warning-active-border-color = $button-warning-border-color
$button-warning-active-color = $button-warning-color
$button-warning-active-background-color = darken($button-warning-background-color, 35%)
$button-warning-disabled-border-color = lighten($button-warning-border-color, 35%)
$button-warning-disabled-color = darken($button-warning-color, 5%)
$button-warning-disabled-background-color = lighten($button-warning-background-color, 35%)

// danger button
$button-danger-border-color = $button-border-color
$button-danger-color = #fff
$button-danger-background-color = #e64545
$button-danger-hover-border-color = $button-danger-border-color
$button-danger-hover-color = $button-danger-color
$button-danger-hover-background-color = darken($button-danger-background-color, 20%)
$button-danger-active-border-color = $button-danger-border-color
$button-danger-active-color = $button-danger-color
$button-danger-active-background-color = darken($button-danger-background-color, 35%)
$button-danger-disabled-border-color = lighten($button-danger-border-color, 35%)
$button-danger-disabled-color = darken($button-danger-color, 5%)
$button-danger-disabled-background-color = lighten($button-danger-background-color, 35%)


/*
 * Containers
 */
$container-border = 0
$container-padding = 15px
$container-margin = 0
$container-narrow-width = 60%


/*
 * Panels
 */
$panel-border = $border-width $border-style $border-color
$panel-border-radius = $border-radius
$panel-padding = 10px
$panel-margin = 0


/*
 * Code
 */

// code base
$code-font = "Courier New", Courier, monospace
$code-border = $border-width $border-style $border-color
$code-border-radius = $border-radius
$code-padding = 2px
$code-margin = 0
$code-background-color = #ebebeb

// pre code
$code-pre-margin = 8px 0 0 0


/*
 * Headers
 */
$header-background-color = #f4f4f4
$header-border-color = #b5b5b5


/*
 * Footers
 */
$footer-background-color = #f4f4f4
$footer-border-color = #b5b5b5


/*
 * Input
 */

// text input
$text-input-border = $border-width $border-style $border-color
$text-input-border-radius = $border-radius
$text-input-padding = 7px
$text-input-margin = 0