// base colors
$color = #000
$background-color = #fff
$border-color = #aaa

// fonts
$font-size-base = 14px
$font-size-h1 = round($font-size-base * 3)
$font-size-h2 = round($font-size-h1 * 0.8)
$font-size-h3 = round($font-size-h2 * 0.8)
$font-size-h4 = round($font-size-h3 * 0.8)
$font-size-h5 = round($font-size-h4 * 0.8)
$font-size-h6 = round($font-size-h5 * 0.8)

// base borders
$border-width = 1px
$border-style = solid
$border-radius = 5px

// paragraphs
$paragraph-border = 0
$paragraph-border-radius = 0
$paragraph-padding = 0
$paragraph-margin = 4px 0 4px 0
$paragraph-color = $color
$paragraph-background-color = $background-color

// containers
$container-border = 0
$container-padding = 20px 30px
$container-margin = 0
$container-color = $color
$container-background-color = $background-color
$container-narrow-width = 60%

// panels
$panel-border = $border-width $border-style $border-color
$panel-border-radius = $border-radius
$panel-padding = 10px
$panel-margin = 0
$panel-color = $color
$panel-background-color = $background-color